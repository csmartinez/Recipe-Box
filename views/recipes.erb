<h1><strong><%= @recipe.name %></strong> Recipe</h1>
<div class="left">

  <h3>Add Instructions</h3>
    <form action="/instructions" method="post">
      <textarea id="instructions" name="description" type="text" placeholder="Cut into small pieces." rows="10" cols="40">
      </textarea>
        <input type="hidden" name="recipe_id" value="<%= @recipe.id() %>">
        <div class="form-group">
          <button type="submit" class="btn btn-success">Add Instruction</button>
      </div>
    </form>

  <ol>
    <% if @recipe.instructions.any?() %>
      <% @recipe.instructions.each() do |instruction| %>
        <li><%= instruction.description() %></li>
      <% end %>
    <% else %>
      <%= "No instructions yet" %>
    <% end %>
  </ol>

<a href="/">Back to Recipes</a>
</div>

<div class="right">
  <h3>Add Igredients</h3>
  <form>
    <input id="ingredients">
    <button class="btn btn-success">Add Ingredients</button>
  </form>
</div>
