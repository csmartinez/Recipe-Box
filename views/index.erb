<h1><strong>Recipe Organizer</strong><small> Add a Category</small></h1>

<form action='/category' method='post'>
    <label for='name'>Create a category</label>
    <input id="category" name='category_name' type='text' placeholder=" Italian">
  <button type="submit" class="btn btn-success">Add Category</button>
</form>

<ul>
  <% if @categories.any?() %>
  <% @categories.each() do |category| %>
  <li><a href="/categories/<%= category.id() %>"><%= category.name() %></a></li>
  <% end %>
  <% else %>
  <%= "No categories yet" %>
  <% end %>
</ul>
